<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Label for Course 1 Grade -->
    <TextView
        android:id="@+id/course1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 1 Grade:" />

    <!-- EditText to accept Course 1 Grade -->
    <EditText
        android:id="@+id/course1Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <!-- Label for Course 2 Grade -->
    <TextView
        android:id="@+id/course2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 2 Grade:" />

    <!-- EditText to accept Course 2 Grade -->
    <EditText
        android:id="@+id/course2Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <!-- Label for Course 3 Grade -->
    <TextView
        android:id="@+id/course3Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 3 Grade:" />

    <!-- EditText to accept Course 3 Grade -->
    <EditText
        android:id="@+id/course3Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <!-- Label for Course 4 Grade -->
    <TextView
        android:id="@+id/course4Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 4 Grade:" />

    <!-- EditText to accept Course 4 Grade -->
    <EditText
        android:id="@+id/course4Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <!-- Label for Course 5 Grade -->
    <TextView
        android:id="@+id/course5Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 5 Grade:" />

    <!-- EditText to accept Course 5 Grade -->
    <EditText
        android:id="@+id/course5Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <!-- Button to compute GPA -->
    <Button
        android:id="@+id/computeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute GPA"
        android:onClick="computeGPA" />

    <!-- Display GPA -->
    <TextView
        android:id="@+id/gpaDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA: " />

</LinearLayout>